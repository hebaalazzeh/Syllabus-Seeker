datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model School {
  id        String     @id @default(cuid())
  name      String     @unique
  courses   Course[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Course {
  id          String     @id @default(cuid())
  courseCode  String
  name        String
  school      School     @relation(fields: [schoolId], references: [id])
  schoolId    String
  professors  Professor[]
  syllabi     Syllabus[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([schoolId, courseCode])
  @@index([schoolId])
}

model Professor {
  id        String     @id @default(cuid())
  name      String     @unique
  courses   Course[]
  syllabi   Syllabus[]
  ratings   Rating[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Syllabus {
  id          String     @id @default(cuid())
  year        Int
  term        String    // Fall, Winter, Spring, Summer
  fileUrl     String?
  textContent String?   @db.Text
  course      Course    @relation(fields: [courseId], references: [id])
  courseId    String
  professor   Professor @relation(fields: [professorId], references: [id])
  professorId String
  ratings     Rating[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([courseId])
  @@index([professorId])
}

model Rating {
  id         String    @id @default(cuid())
  rating     Int       // General rating
  comment    String?   @db.Text
  syllabus   Syllabus  @relation(fields: [syllabusId], references: [id])
  syllabusId String
  professor  Professor @relation(fields: [professorId], references: [id])
  professorId String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([syllabusId])
  @@index([professorId])
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}